@{
    ViewData["Title"] = "Expenses Page";
}

@model SpendSmart.Models.Expense

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4">Create New Expense</h1>
    </div>

    <form asp-action="CreateNewForm" asp-controller="Home">
        <input hidden class="form-control" type="number" asp-for="Id">

        <div class="form-group">
            <label for="Value">Value</label>
            <input class="form-control" id="Value" type="number" asp-for="Value" placeholder="Enter the expense value">
        </div>

        <div class="form-group">
            <label for="Description">Description</label>
            <input class="form-control" id="Description" type="text" asp-for="Description" placeholder="Enter a description">
        </div>
        <br />
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a class="btn btn-secondary" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>
