@{
    ViewData["Title"] = "Expenses Page";
}

@model List<Expense>

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4">Expense Pages</h1>
    </div>

    <div class="table-responsive mt-4">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Value</th>
                    <th scope="col">Description</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var expense in Model)
                    {
                        <tr>
                            <td>@expense.Id</td>
                            <td>@expense.Value</td>
                            <td>@expense.Description</td>
                            <td>
                                <a class="btn btn-primary btn-sm" asp-action="CreateNewOrEdit" asp-route-id="@expense.Id">Edit</a>
                                <a class="btn btn-danger btn-sm" asp-action="DeleteExpenses" asp-route-id="@expense.Id">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <div class="text-center">
        <a class="btn btn-secondary" asp-action="Index">Back to Home</a>
        <a class="btn btn-success" asp-action="CreateNewOrEdit">Add New</a>
    </div>
</div>
